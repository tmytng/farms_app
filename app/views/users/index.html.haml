      - if current_user.has_role? :admin
        .sub-msg
          = link_to "ユーザー新規作成", new_user_registration_path, class: 'btn btn-primary btn-sm'
      .users-container
        - @users.each do |user|
          .users-box
            = link_to user_path(user) do
              .users-box__avatar
                - if user.avatar.attached?
                  = image_tag user.avatar
              .users-box__name
                = user.name
              .users-box__profile
                = user.profile
              .users-box__register-date
                ユーザー登録日：#{l user.created_at, format: :day}
              .users-box__last-updated
                最終ログイン：
                - if user.current_sign_in_at.present?
                  = "#{l user.current_sign_in_at, format: :short}"
