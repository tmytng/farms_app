.contents
  = render "layouts/global-navigation"
  .main
    .index-field
      .sub-msg
        ユーザー一覧
      .users-container
        - @users.each do |user|
          .users-box
            = link_to user_path(user) do
              .users-box__avatar
                - if user.avatar.attached?
                  = image_tag user.avatar
              .users-box__name
                = user.name
              .users-box__profile
                = user.profile
              .users-box__register-date
                ユーザー登録日：#{user.created_at.strftime("%Y/%m/%d")}
              .users-box__last-updated
                最終ログイン： #{user.current_sign_in_at.strftime("%Y/%m/%d %H:%M")}
