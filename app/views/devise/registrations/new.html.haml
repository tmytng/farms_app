.contents
  = render "layouts/global-navigation"
  .main
    .user-field
      %h1 新規ユーザー登録
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = render "devise/shared/error_messages", resource: resource
        .FormField
          .FormField__label--normal
            = f.label :name
          .FormField__input--normal
            = f.text_field :name, autofocus: true
        .FormField
          .FormField__label--normal
            = f.label :avatar
          .FormField__input--normal
            = f.file_field :avatar
        .FormField
          .FormField__label--normal
            = f.label :profile
          .FormField__input--normal
            = f.text_field :profile, autofocus: true
        .FormField
          .FormField__label--normal
            = f.label :position
          .FormField__input--normal
            = f.text_field :position, autofocus: true
        .FormField
          .FormField__label--normal
            = f.label :email
          .FormField__input--normal
            = f.email_field :email
        .FormField
          .FormField__label--normal
            = f.label :password
          .FormField__label--normal
            - if @minimum_password_length
              %em
                (#{@minimum_password_length} characters minimum)
            %br
            = f.password_field :password, autocomplete: "new-password"
        .FormField
          .FormField__label--normal
            = f.label :password_confirmation
          .FormField__label--normal
            = f.password_field :password_confirmation, autocomplete: "new-password"
        = f.submit "登録する", class: 'Button UserButton'
    %br
    %br
    = link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'Button'
    %br
    = link_to "ユーザー詳細画面に戻る", :back, class: 'Button'
