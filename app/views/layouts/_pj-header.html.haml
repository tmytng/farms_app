.pj-header
  .pj-sub
    = @project.name
  .pj-member
    %ul.member-list
      members:
      - @project.users.each do |member|
        %li.member-icons
          - if member.avatar.attached?
            = link_to user_path(member) do
              = image_tag member.avatar
  .pj-desc
    .desc-box
      = @project.profile
  .pj-category
    %ul.pj-category__act-lists
      %li.pj-category__act-lists__list
        = link_to "コンタクトログ", project_posts_path(@project), class: 'btn btn-secondary btn-sm'
      %li.pj-category__act-lists__list
        = link_to "ダッシュボード", project_path(@project), class: 'btn btn-secondary btn-sm'
