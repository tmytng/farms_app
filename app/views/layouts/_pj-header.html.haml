.jumbotron.mb-2.p-0
  .container
    .row
      .col-md-12
        .pj-sub
          = @project.name
    .row
      .col-md-12
        .pj-member.m-1
          %ul.member-list
            members:
            - @project.users.each do |member|
              %li.member-icons
                - if member.avatar.attached?
                  = link_to user_path(member) do
                    = image_tag member.avatar
    .row
      .col-md-12
        .pj-desc
          .desc-box
            = @project.profile
  .row
    .col-md-12
      .pj-category.pt-2
        %ul.pj-category__act-lists
          %li.pj-category__act-lists__list
            = link_to "コンタクトログ", project_posts_path(@project), class: 'btn btn-primary btn-sm'
          %li.pj-category__act-lists__list
            = link_to "詳細検索", search_project_posts_path(@project), class: 'btn btn-primary btn-sm'
          %li.pj-category__act-lists__list
            = link_to "ダッシュボード", project_path(@project), class: 'btn btn-primary btn-sm'
